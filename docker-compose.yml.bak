version: '1.0'

services:
  backend:
    build:
      context: https://gitlab.com/devops7504114/devops_backend.git
      dockerfile: Dockerfile
    env_file:
      - ./.env
    volumes:
      - ./backend.conf:/app/backend.conf
    restart: unless-stopped
    depends_on:
      - db
  frontend:
    build:
      context: https://gitlab.com/devops7504114/devops_frontend.git
      dockerfile: Dockerfile
    env_file:
      - ./.env
    volumes:
      - ./frontend.conf:/app/frontend.conf
      - ./.env:/app/.env
    depends_on:
      - backend
    restart: unless-stopped
  db:
    image: mysql:8.3
    environment:
      MYSQL_DATABASE: ${MYSQL_DATABASE}
      MYSQL_USER: ${MYSQL_USER}
      MYSQL_PASSWORD: ${MYSQL_PASSWORD}
      MYSQL_ROOT_PASSWORD: ${MYSQL_ROOT_PASSWORD}
  nginx:
    build: 
      context: https://github.com/SergeyKeik/devops_nginx.git
      dockerfile: Dockerfile
    env_file:
      - ./.env
    ports:
      - "1234:80"
    volumes:
      - ./nginx.conf:/usr/local/nginx/conf/nginx.conf:ro
    depends_on:
      - frontend
      - backend

